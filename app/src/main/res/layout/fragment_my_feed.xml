<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@+id/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message"
        />

    <ImageView
        android:id="@+id/contentPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contentText"
        />

    <TextView
        android:id="@+id/contentText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/Like1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_thumb_up_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contentPic"
        />

    <ImageView
        android:id="@+id/Dislike1"
        android:layout_margin="8dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_thumb_down_black_24dp"
        app:layout_constraintStart_toEndOf="@id/Like1"
        app:layout_constraintTop_toBottomOf="@id/contentPic"
        />
    <ImageView
        android:id="@+id/Wow1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:src="@drawable/wow"
        app:layout_constraintStart_toEndOf="@id/Dislike1"
        app:layout_constraintTop_toBottomOf="@id/contentPic"
        />

    <ImageView
        android:id="@+id/Angry1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:src="@drawable/angry_face"
        app:layout_constraintStart_toEndOf="@id/Wow1"
        app:layout_constraintTop_toBottomOf="@id/contentPic"
        />

    <ImageView
        android:id="@+id/comment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_comment_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/contentPic"
        />

    <TextView
        android:id="@+id/LikeCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="View Reactions!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Wow1"
        ></TextView>





</androidx.constraintlayout.widget.ConstraintLayout>
